{
  "name": "microlight",
  "description": "",
  "author": "",
  "license": "ISC",
  "version": "0.1.0",
  "main": "main.js",
  "repository": {
    "type" : "git",
    "url" : "https://github.com/XinYueStudio/UpdateDisk.git"
  },
  "scripts": {
    "start": "electron .",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist -- --dir -c.compression=store -c.mac.identity=null",
    "build": "electron-builder --win --x64 --publish always",
    "build:dir": "electron-builder --dir"
  },
  "electronWebpack": {
    "commonSourceDirectory": "common",
    "main": {
      "sourceDirectory": "common"
    },
    "renderer": {
      "sourceDirectory": null
    }
  },
  "build": {
    "productName": "MicroLight",
    "appId": "com.MicroLight.Home",
    "publish": [
      {
        "provider": "generic",
        "url": "https://www.xinyuestudio.com/download/"
      }
    ],
    "directories": {
      "output": "0.1.0"
    },
    "asar": true,
    "files": [
      "node_modules/",
      "Build/",
      "main.js",
      "index.html",
      "logo.png"
    ],
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icon_256.ico",
      "uninstallerIcon": "icon_256.ico",
      "installerHeaderIcon": "icon_256.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MicroLight"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "win": {
      "icon": "icon_256.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "electron": "^13.6.6",
    "electron-builder": "^20.38.2",
    "electron-webpack": "^2.1.2"
  },
  "resolutions": {
    "upath": "^1.0.5"
  },
  "dependencies": {
    "electron-updater": "^4.2.0"
  }
}
